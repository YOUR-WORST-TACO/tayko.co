@model List<PostModel>
@{
    ViewData["Title"] = "Blog";
    Layout = "_BlogLayout";
}

<h1>Blog</h1>
<hr/>
<ul class="article-overview">
    @{
        foreach (var post in Model )
        {
            <li>
                <a asp-controller="Blog" asp-action="LoadBlog" asp-route-article="@post.PostName">
                    
                    @if (post.PostEditDate != DateTime.MinValue)
                    {
                        <p class="article-date">
                            @post.PostEditDate.ToString("D")
                        </p>
                    }
                    <h2>@post.PostTitle</h2>

                    @{
                        var articleDescription = post.PostContent;
                        if (articleDescription.Length > 250)
                        {
                            articleDescription = articleDescription.Substring(0, 250);
                        }
                    }
                    <div class="article-description">
                        <div></div>
                        <p>@articleDescription</p>
                    </div>
                </a>
            </li>
        }
    }
</ul>