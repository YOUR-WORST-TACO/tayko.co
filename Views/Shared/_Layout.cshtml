<!-- RE-STRUCTURE -->

<div class="body-content">
    <nav class="navbar content-left">
        <h1 style="color: #000 !important;">Stephen, Tafoya</h1>
    </nav>
    <div id="main" class="content-right">
        <a asp-controller="Home" asp-action="Code">CODE</a>
        <a asp-controller="Home" asp-action="Index">INDEX</a>
        
        @RenderBody()
        
        <hr/>
        <footer>
            <p>&copy; @DateTime.Now.Year - Tayko.co</p>
            </footer>
    </div>
</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script> <!-- JQuery -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script> <!-- Bootstrap -->

    <script src="~/lib/smoothState/dist/jquery.smoothState.js"></script> <!-- SmoothState -->

    <script src="~/js/site.js" asp-append-version="true"></script> <!-- Site.js -->
</environment>
<environment exclude="Development">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
