@{
    ViewData["Title"] = "Stephen Tafoya";
    string lyzeCookie = Context.Request.Cookies["LyzeCookie"];
    Layout = "_LayoutContainerless";
}

@section Meta {
    <meta name="description" content="Stephen Tafoya is a programmer who excels at a wide variety of languages and frameworks including but not limited to C, C++, Dotnet Core, Web Languages, Docker, Github Integration, Kubernetes, and many many more.">
    <meta name="og:title" property="og:title" content="Stephen Tafoya, Programmer">
